<p id="notice"><%= notice %></p>

<h1>Login</h1>

<%= form_tag do %>
  <div class="field">
    <%= label_tag :name %><br>
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag("Login") %>
  </div>
<% end %>
